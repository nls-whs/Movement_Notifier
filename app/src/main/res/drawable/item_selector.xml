<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:drawable="@drawable/item_activated" android:state_pressed="true" />

    <!-- Used when the view is "activated". -->
    <item android:drawable="@drawable/item_activated" android:state_activated="true" />

    <!-- Default, "just hangin' out" state. -->
    <item android:drawable="@drawable/item_activated" />
</selector>