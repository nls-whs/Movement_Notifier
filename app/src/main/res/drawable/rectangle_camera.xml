<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="150dp"
        android:height="150dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="15px"
                android:color="#00000000" />

            <solid android:color="#00000000" />

        </shape>
    </item>
    <item
        android:width="3dp"
        android:bottom="0dp"
        android:top="110dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
    <item
        android:width="3dp"
        android:bottom="110dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
    <item
        android:width="4dp"
        android:bottom="0dp"
        android:gravity="right"
        android:top="110dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
    <item
        android:width="4dp"
        android:bottom="110dp"
        android:gravity="right"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
    <item
        android:height="4dp"
        android:gravity="top"
        android:left="0dp"
        android:right="110dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
    <item
        android:height="4dp"
        android:gravity="top"
        android:left="110dp"
        android:right="0dp"
        android:top="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
    <item
        android:height="4dp"
        android:gravity="bottom"
        android:left="0dp"
        android:right="110dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
    <item
        android:height="4dp"
        android:gravity="bottom"
        android:left="110dp"
        android:right="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/vuzix_white" />
        </shape>
    </item>
</layer-list>